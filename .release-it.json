{
  "verbose": 1,
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "yyyy.mm.minor",
      "increment": "calendar.minor"
    }
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "pnpm exec auto-changelog -p && pnpm run dep-graph:html  && pnpm run compodoc",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "commitMessage": "release: ${version}",
    "tagName": "${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": false,
    "addUntrackedFiles": true,
    "changelog": "pnpm exec auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
    "commit": true,
    "tag": true,
    "push": true
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  }
}
