{
  "verbose": 1,
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "npm run generate-changelog -p && npm run dep-graph:html  && npm run compodoc",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "requireBranch": "main",
    "requireCleanWorkingDir": false,
    "addUntrackedFiles": true,
    "changelog": "npm run generate-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
    "commit": true,
    "tag": true,
    "push": true
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  }
}
