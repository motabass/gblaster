{
  "name": "ui-components-dialogs",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ui-components/dialogs/src",
  "prefix": "mtb",
  "tags": ["lib", "component", "angular"],
  "generators": {
    "@nx/angular:component": {
      "styleext": "scss"
    }
  },
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "options": {
        "outputPath": "dist/libs/ui-components/dialogs",
        "tsConfig": "libs/ui-components/dialogs/tsconfig.lib.json",
        "browser": "libs/ui-components/dialogs/src/index.ts"
      }
    },
    "test": {
      "executor": "@angular/build:unit-test",
      "options": {
        "tsConfig": "libs/ui-components/dialogs/tsconfig.spec.json",
        "buildTarget": "ui-components-dialogs:build"
      },
      "configurations": {
        "watch": {
          "watch": true
        },
        "ci": {
          "coverage": true
        }
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ui-components/dialogs/**/*.css", "libs/ui-components/dialogs/**/*.scss"]
      }
    }
  }
}
