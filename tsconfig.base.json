{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2024", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@motabass/helpers": ["libs/helpers/src/index.ts"],
      "@motabass/material-helpers/mat-icon-size": ["libs/material-helpers/mat-icon-size/src/index.ts"],
      "@motabass/ui-components/dialogs": ["libs/ui-components/dialogs/src/index.ts"],
      "@motabass/ui-components/file-drop-overlay": ["libs/ui-components/file-drop-overlay/src/index.ts"],
      "@motabass/ui-components/slide-panel": ["libs/ui-components/slide-panel/src/index.ts"],
      "@motabass/workspace": ["libs/workspace/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "extendedDiagnostics": true,
    "strictInjectionParameters": true,
    "strictTemplates": true,
    "strictStandalone": true,
    "typeCheckHostBindings": true
  },
  "exclude": ["node_modules", "tmp"]
}
